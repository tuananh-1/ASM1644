{{!-- table.table.table-bordered>tr*3>th*7 --}}
<table class="table bordered">
   <tr>
      <th class="h2 text text-success" colspan="7">TOY LIST</th>
      <th>
         <a class="btn btn-primary" href="/toy/add">Add Toy</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Image</th>
      {{!-- <th>Video</th> --}}
    

      
   </tr>
   {{!-- heach --}}
   {{#each toys }}
   <tr>
      <th>{{ name }}</th>
      <th>{{ type }}</th>
      <th>{{ quantity }}</th>
      <th>{{ price }}</th>
      <th>
         <img src="{{ image }}" width="200" height="250">
      </th>
      {{!-- <th>
         <iframe src="https://www.youtube.com/embed/{{ video }}" 
         width="300" height="200"></iframe>
      </th> --}}
      <th>{{brand}}</th>
      <th>
         <a class="btn btn-warning" href="/toy/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/toy/delete/{{_id}}"
         onclick="return confirm('Do you want to delete this product ?');"
         >Delete</a>
      </th>
   </tr>
   {{/each}}
</table>